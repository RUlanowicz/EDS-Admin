<h1 class="page-header">Reports</h1>




<div class="table-responsive">

<table class="table table-striped">
<thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Description</th>
      <th>Images</th>
      <th>Location</th>
      <th>User</th>
      <th class="text-center">Edit</th>
      <th class="text-center">Delete</th>
    </tr>
  </thead>

<tbody>
    {{#each report in model}}
        <tr>
          <td>{{report.dateReported}}</td>
          <td>{{report.tag}}</td>
          <td>{{report.description}}</td>
          <td>{{report.images}}</td>
          <td>
            <i class="glyphicon glyphicon-plus" {{action 'showModal' 'modals/map-modal' report}}></i>
          </td>
          <td>{{report.reporter}}</td>
          <td class="text-center"><i class="glyphicon glyphicon-pencil"></i></td>
          <td class="text-center"><i class="glyphicon glyphicon-trash" {{action 'showModal' 'modals/delete-modal' report}}></i></td>
        </tr>
    {{/each}}
  </tbody>
</table>

</div>
